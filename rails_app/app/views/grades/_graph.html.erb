<% pyungjeom = grades['seongjeok_info']['course']['pyungjeom'] %>
<% data_set = pyungjeom.map {|p| [p['id'], p['pyeonggyun'].to_f]} %>
<div id="chart"></div>
<script type="text/javascript">
$(document).ready(function(){
  var line = <%= data_set.to_s.html_safe %>;

  var plot = $.jqplot('chart', [line], {
    title: '전체 학기 평점',
    axes: {
      xaxis: {
            label: "학기",
            renderer: $.jqplot.CategoryAxisRenderer,
            tickOptions: {
              formatString: 'Date: %s'
            }
      },
      yaxis: {
            label: "평점",
            tickOptions: {
              formatString: '%.2f'
            }
      }
    },
    highlighter: {
        show: true,
        tooltipAxes: 'y',
        sizeAdjust: 7.5
      },
      cursor: {
        show: true
      }
  });
});
</script>
